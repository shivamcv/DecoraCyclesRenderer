<Window x:Class="DecoraCsycles.Views.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ProgressWindow"
        DataContext="{Binding Source={StaticResource Locator}, Path=Connection}"
        WindowStyle="None" WindowStartupLocation="CenterScreen" Height="30" Width="300">
    <Grid>
        <ProgressBar Maximum="{Binding MeshCount}" Value="{Binding CurrentMesh}" />
    </Grid>
</Window>
